<%- include("../partials/header") %>
    <% if(Flag){ %>
        <div class="alert alert-success">
            <strong>Success!</strong> You have registerd benh nhan successfully
        </div>
        <% } %>
            <div class="container">
                <main role="main" class="pb-3" style="margin-top: 100px;">
                    <h1>Tạo bệnh nhân</h1>
                    <form action="/BacSi/Taobenhnhan" method="POST">
                        <div class="form-group">
                            <label>Tài khoản</label>
                            <input type="text" name="TaiKhoan" class="form-control">
                            <label>Mật khẩu</label>
                            <input type="text" name="MatKhau" class="form-control">
                            <label>Họ và tên lót</label>
                            <input type="text" name="HoVaTenLot" class="form-control">
                            <label>Tên</label>
                            <input type="text" name="Ten" class="form-control">
                            <label>Email</label>
                            <input type="text" name="Email" class="form-control">
                            <label>SĐT</label>
                            <input type="text" name="SDT" class="form-control">
                            <label>Giới tính</label>
                            <input type="text" name="GioiTinh" class="form-control">
                            <label>Ngày sinh</label>
                            <input type="text" name="NgaySinh" class="form-control">
                            <label>Dân tộc</label>
                            <input type="text" name="DanToc" class="form-control">
                        </div>
                        <button class="btn btn-primary w-100">Submit</button>
                    </form>
                </main>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Họ và tên lót</th>
                                <th>Tên</th>
                                <th>SĐT</th>
                                <th>Email</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                                <th>Dân tộc </th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for(let i=0; i < DSBenhNhan.length; i++) { %>
                                <tr>
                                    <th>
                                        <%= DSBenhNhan[i].TaiKhoan %>
                                    </th>
                                    <td>
                                        <%= DSBenhNhan[i].HoVaTenLot %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].Ten %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].SDT %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].Email %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].GioiTinh %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].NgaySinh %>
                                    </td>
                                    <td>
                                        <%= DSBenhNhan[i].DanToc %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <%- include("../partials/footer") %>
                <%- include("../partials/ending") %>