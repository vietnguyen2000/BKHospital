<%- include("../partials/header") %> 
<% if(Error){ %>
    <div class="alert alert-danger">
        <strong>Error!</strong> <%=     Error  %> </div>
<% } %>
<div class="container">
    <main role="main" class="pb-3" style="margin-top: 100px;">
        <h1>Xem danh sách xét nghiệm</h1>
        <form action="/BacSi/DsXetNghiemBacSi" method="POST">
			<div class="form-group">
                    <label>Mã bệnh nhân</label>
                        <input type="text"  name="MaBenhNhan" class="form-control">
                    <label>FromDate</label>
        <input type="text" name="FromDate" class="form-control">
    <label>ToDate</label>
        <input type="text"  name="ToDate" class="form-control">
               
            </div>
			<button class="btn btn-primary w-100">Submit</button>
		</form>
    </main>

    <%if (DsXetNghiemBacSi) { %>
        <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tên xét nghiệm</th>
                            <th>Thời gian khám bệnh</th>
                            <th>Mã Nhân viên</th>
                            <th>Mã bệnh nhân</th>
                            <th>Mã Nhân viên thực hiện</th>
                            <th>Thời gian thực hiện</th>

                        </tr>
                    </thead>
                    
                    <tbody>
                        <% for(let i = 0; i < DsXetNghiemBacSi[0].length; i++) { %>
                            <tr>
                                    <td><%= DsXetNghiemBacSi[0][i].TenXetNghiem %></td>
                                <th><%= formatDate(DsXetNghiemBacSi[0][i].ThoiGianKhamBenh) %></th>
                                <td><%= DsXetNghiemBacSi[0][i].MaNhanVien %></td>
                                <td><%= DsXetNghiemBacSi[0][i].MaBenhNhan  %></td>
                                <td><%= DsXetNghiemBacSi[0][i].MaNhanVienThucHien %></td>
                                <td><%= formatDate(DsXetNghiemBacSi[0][i].ThoiGianThucHien) %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

<%- include("../partials/footer") %>
<%- include("../partials/ending") %>







