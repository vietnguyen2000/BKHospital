<%- include("../partials/header") %> 
<% if(Error){ %>
    <div class="alert alert-danger">
        <strong>Error!</strong> <%=     Error  %> </div>
<% } %>
<div class="container">
    <main role="main" class="pb-3" style="margin-top: 100px;">
        <h1>Xem danh sách thuốc của bác sĩ</h1>
        <form action="/BacSi/DsThuocBacSi" method="POST">
			<div class="form-group">
                    <label>Mã bệnh nhân</label>
                        <input type="text"  name="MaBenhNhan" class="form-control">
                        <label>FromDate</label>
                            <input type="text"  name="FromDate" class="form-control">
                        <label>ToDate</label>
                            <input type="text" name="ToDate" class="form-control">
            </div>
			<button class="btn btn-primary w-100">Submit</button>
		</form>
    </main>

    <%if (DsThuocBacSi) { %>
        <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã thuốc</th>
                            <th>Tên thuốc</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% for(let i = 0; i < DsThuocBacSi[0].length; i++) { %>
                            <tr>
                                <td><%= DsThuocBacSi[0][i].MaThuoc %></td>
                                <td><%= DsThuocBacSi[0][i].TenThuoc %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

<%- include("../partials/footer") %>
<%- include("../partials/ending") %>







