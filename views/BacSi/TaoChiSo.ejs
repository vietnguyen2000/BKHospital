<%- include("../partials/header") %>
    <% if(Flag){ %>
        <div class="alert alert-success">
            <strong>Success!</strong> Bạn đã tạo chỉ số cho xét nghiệm thành công
        </div>
        <% } %>
            <!-- <% if(Error){ %>
