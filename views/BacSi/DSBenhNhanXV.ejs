<%- include("../partials/header") %>
    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 100px;">
            <h1>Xem danh sách bệnh nhân đã xuất viện</h1>
        </main>

        <%if (DSBenhNhanXV) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã bệnh nhân</th>
                            <th>Họ và tên</th>
                            <th>Dân tộc</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(let i=0; i < DSBenhNhanXV[0].length; i++) { %>
                            <tr>
                                <td>
                                    <%= DSBenhNhanXV[0][i].MaBenhNhan %>
                                </td>
                                <td>
                                    <%= DSBenhNhanXV[0][i].HoVaTenLot + " " + DSBenhNhanXV[0][i].Ten %>
                                </td>
                                <td>
                                    <%= DSBenhNhanXV[0][i].DanToc %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
    </div>

    <%- include("../partials/footer") %>
        <%- include("../partials/ending") %>