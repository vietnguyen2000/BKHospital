    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 100px;">
            <h1>Xem danh sách bệnh nhân cùng bệnh</h1>
            <form action="/BacSi/DSBenhNhanCungBenh" method="POST">
                <div class="form-group">
                    <label>Tên bệnh nhân</label>
                    <select class="form-control" name="MaBenhNhan">
                        <% for ( var i=0; i < ListBenhNhan.length; i++ ) { %>
                            <option value="<%=ListBenhNhan[i].MaBenhNhan%>">
                                <%= ListBenhNhan[i].HoVaTenLot + " " + ListBenhNhan[i].Ten %>
                            </option>
                            <% } %>
                    </select>
                    <label>Mã bệnh</label>
                    <select class="form-control" name="MaBenh">
                        <% for ( var i=0; i < ListMaBenh.length; i++ ) { %>
                            <option value="<%=ListMaBenh[i].MaBenh%>">
                                <%= ListMaBenh[i].TenBenh %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <button class="btn btn-primary w-100">Submit</button>
            </form>
        </main>

        <%if (DSBenhNhanCungBenh) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã bệnh nhân</th>
                            <th>Dân tộc</th>
                            <th>Tài khoản</th>
                            <th>Loại</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(let i=0; i < DSBenhNhanCungBenh[0].length; i++) { %>
                            <tr>
                                <td>
                                    <%= DSBenhNhanCungBenh[0][i].MaBenhNhan %>
                                </td>
                                <td>
                                    <%= DSBenhNhanCungBenh[0][i].DanToc %>
                                </td>
                                <td>
                                    <%= DSBenhNhanCungBenh[0][i].TaiKhoan %>
                                </td>
                                <td>
                                    <%= DSBenhNhanCungBenh[0][i].Loai %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
    </div>

    <%- include("../partials/footer") %>
        <%- include("../partials/ending") %>