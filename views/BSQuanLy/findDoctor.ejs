<%- include("../partials/header") %> 
<div class="container">
    <main role="main" class="pb-3" style="margin-top: 100px;">
        <form action="/BSQuanLy/findDoctor" method="POST">
            <div class="form-group">
                <label>Faculty</label>
                <select class="form-control" name="shift[Faculty]">
                    <option value="*">Tất cả các khoa</option>
                    <% if(Faculty){
                        Faculty.forEach(element => {%>
                            <option value = <%= element.MaKhoaDieuTri %>><%=element.TenKhoa%></option>
                        <%});
                    }%>
                </select>
                <label>Date</label>
                <input type = "date" class = "form-control" name="shift[Date]" placeholder="Date">
                <label>Shift</label>
                <select class="form-control" name="shift[Shift]">
                    <option value="*">Cả ngày</option>
                    <option value="Buổi sáng">Buổi sáng</option>
                    <option value="Buổi trưa">Buổi trưa</option>
                    <option value="Buổi chiều">Buổi chiều</option>
                    <option value="Buổi tối">Buổi tối</option>
                </select>
            </div>
            <button class="btn btn-primary w-100">Submit</button>
        </form>
        <% if(theories) { console.log(theories)%>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Họ và tên lót</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Giới tính</th>
                            <th>Tên khoa</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% for(let i = 0; i < theories.length; i++) { %>
                            <tr>
                                <th><%= theories[i].HoVaTenLot %> </th>
                                <td><%= theories[i].Ten %></td>
                                <td><%= theories[i].Email %></td>
                                <td><%= theories[i].SDT %></td>
                                <td><%= theories[i].GioiTinh %></td>
                                <td><%= theories[i].TenKhoa %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <%}%>
    </main>
</div>
<%- include("../partials/footer") %> 

<%- include("../partials/ending") %>
